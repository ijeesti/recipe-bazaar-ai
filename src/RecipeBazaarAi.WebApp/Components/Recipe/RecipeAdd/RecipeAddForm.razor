@page "/recipes/new"
@inherits RecipeAddFormBase

<div class="container my-5">
    <div class="card shadow-lg border-0 recipe-form-card">
        <div class="row g-0">
            <div class="col-lg-7 order-lg-1">
                <div class="card-body p-4 p-md-5">

                    <h1 class="card-title display-6 fw-bold text-primary mb-4">
                        <i class="bi bi-plus-circle me-2"></i> Submit Your Recipe
                    </h1>

                    <EditForm Model="@NewRecipe" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" />

                        <div class="row mb-3">
                            <div class="col-md-7">
                                <label for="titleInput" class="form-label fw-semibold">Recipe Title</label>
                                <InputText id="titleInput" @bind-Value="NewRecipe.Title" class="form-control form-control-lg" placeholder="E.g., Grandma's Apple Pie" />
                            </div>
                            <div class="col-md-5">
                                <label for="categorySelect" class="form-label fw-semibold">Category</label>
                                <InputText id="categorySelect" @bind-Value="NewRecipe.CategoryName" class="form-control form-control-lg" placeholder="Dessert" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="descriptionInput" class="form-label fw-semibold">Short Description</label>
                            <InputTextArea id="descriptionInput" @bind-Value="NewRecipe.Description" class="form-control" rows="2" placeholder="Tell us briefly about this delicious dish..." />
                        </div>

                        <section class="mb-4">
                            <h4 class="fw-bold text-primary mb-3"><i class="bi bi-list-check me-2"></i> Ingredients</h4>
                            <div class="alert alert-light p-2 small">Tip: Enter each ingredient on a new line.</div>
                            <InputTextArea @bind-Value="NewRecipe.Ingredients" class="form-control" rows="6" placeholder="1 cup flour&#10;2 tbsp sugar&#10;..." />
                        </section>

                        <section class="mb-4">
                            <h4 class="fw-bold text-success mb-3"><i class="bi bi-book me-2"></i> Instructions</h4>
                            <div class="alert alert-light p-2 small">Tip: Number each step for clarity (e.g., 1. Mix ingredients...).</div>
                            <InputTextArea @bind-Value="NewRecipe.Instructions" class="form-control" rows="8" placeholder="1. Preheat oven to 350F...&#10;2. Mix all dry ingredients..." />
                        </section>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1 me-3">
                                <label for="imageUrlInput" class="form-label fw-semibold">Image URL</label>
                                <InputText id="imageUrlInput" @bind-Value="NewRecipe.ImageUrl" class="form-control" placeholder="https://example.com/my-photo.jpg" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg px-4 mt-3 shadow-sm">
                                <i class="bi bi-save me-2"></i> Save Recipe
                            </button>
                        </div>

                    </EditForm>
                </div>
            </div>

            <div class="col-lg-5 order-lg-2 d-none d-lg-block">
                <div class="p-4 p-md-5 recipe-preview">
                    <h5 class="fw-bold text-secondary mb-3">Image Preview</h5>
                    <img src="@NewRecipe.ImageUrl" alt="Recipe Preview" class="img-fluid rounded shadow-sm form-preview-image"
                         onerror="this.onerror=null;this.src='placeholder.jpg';" />

                    <h5 class="fw-bold text-secondary mt-4 mb-2">Live Preview</h5>
                    <p class="text-muted small">@NewRecipe.Title</p>
                    <p class="text-muted small">@NewRecipe.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>